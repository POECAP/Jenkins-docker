node {
    def app

    stage('Nom de l'étape : ') {
        checkout scm
    }

    stage('Nom de l'étape :') {
        app = docker.build("chaDEG/TPDEVOPS")
    }

    stage('Nom de l'étape') {
        docker.image('chaDEG/TPDEVOPS').withRun('--rm -p 80:80 --name devops') { c ->
        sh 'docker ps'
        sh 'docker exec devops curl localhost:80'
        sh 'echo "Tests passed"'
        }
    }

    stage('Nom de l'étape : ') {
        docker.withRegistry('https://registry.hub.docker.com', 'charlene') {
            app.push("${env.BUILD_NUMBER}")
            app.push("1.0")
        }
    }
}
